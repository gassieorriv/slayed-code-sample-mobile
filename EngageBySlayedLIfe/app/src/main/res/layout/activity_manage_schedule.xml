                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="80dp">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:text="@string/sunday"
                    android:id="@+id/sunday_text"
                    android:layout_height="wrap_content"
                    tools:ignore="RelativeOverlap" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/tw__composer_deep_gray"
                    android:layout_toStartOf="@id/sunday_end"
                    android:layout_alignParentTop="true"
                    android:id="@+id/sunday_start"
                    android:layout_marginEnd="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    tools:ignore="RelativeOverlap">
                    <AutoCompleteTextView
                        android:hint="@string/open"
                        android:textSize="13sp"
                        android:id="@+id/sunday_start_view"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/tw__composer_deep_gray"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/sunday_end"
                    android:layout_marginEnd="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
