<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_gravity="fill"
        app:strokeColor="@color/basegray"
        android:longClickable="true"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:id="@+id/connectedAccount_name"
            android:fontFamily="@font/montserrat"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/connectedAccount_image"
            android:text="@string/transactions"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_toRightOf="@+id/connectedAccount_image" />
        <ImageView
            android:layout_width="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/connectedAccount_image"
            android:layout_height="35dp"
            android:contentDescription="@string/account_image" />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:id="@+id/connectedAccount_following"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:layout_below="@+id/connectedAccount_image"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Caption"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:id="@+id/connectedAccount_followers"
            android:fontFamily="@font/montserrat"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:layout_below="@+id/connectedAccount_following"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"/>


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:id="@+id/connectedAccount_active"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>