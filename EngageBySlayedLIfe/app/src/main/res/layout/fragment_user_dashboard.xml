<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.fragment_user_dashboard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/padding"
        android:layout_height="80dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="2"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="16dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                app:strokeWidth="1dp"
                android:id="@+id/level_card"
                app:strokeColor="@color/basegray"
                app:cardElevation="4dp"
                android:layout_gravity="fill"
                android:layout_width="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/engage_level"
                        app:fontFamily="@font/montserrat"
                        android:fontFamily="@font/montserrat" />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        style="@style/TextAppearance.MaterialComponents.Headline5"
                        android:id="@+id/level"
                        android:textColor="@color/blue_100"
                        app:fontFamily="@font/montserrat"
                        android:layout_height="wrap_content"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="wrap_content"
                            android:id="@+id/level_indicator"
                            android:layout_columnWeight="1"
                            android:layout_columnSpan="1"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/next_level"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/blue_100"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                app:strokeWidth="1dp"
                android:layout_marginTop="16dp"
                app:strokeColor="@color/basegray"
                app:cardElevation="4dp"
                android:id="@+id/points_card"
                android:layout_gravity="fill"
                android:layout_width="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/engage_points"
                        app:fontFamily="@font/montserrat"
                        android:fontFamily="@font/montserrat" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/points"
                            style="@style/TextAppearance.MaterialComponents.Headline5"
                            android:textColor="@color/dark_blue_100"
                            app:fontFamily="@font/montserrat"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:id="@+id/redeem_points_button"
                            android:text="@string/redeem_points"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:id="@+id/following_card"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_columnSpan="1"
                app:strokeWidth="1dp"
                app:strokeColor="@color/basegray"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.CardView"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/following"
                        app:fontFamily="@font/montserrat"
                        android:fontFamily="@font/montserrat" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/following"
                            style="@style/TextAppearance.MaterialComponents.Headline5"
                            android:textColor="@color/dark_blue_100"
                            app:fontFamily="@font/montserrat"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/following_percent"
                            android:textColor="@color/red_100"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                app:strokeWidth="1dp"
                android:id="@+id/follower_card"
                android:layout_marginTop="16dp"
                app:strokeColor="@color/basegray"
                app:cardElevation="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/followers"
                        app:fontFamily="@font/montserrat"
                        android:fontFamily="@font/montserrat" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/followers"
                            style="@style/TextAppearance.MaterialComponents.Headline5"
                            android:textColor="@color/dark_blue_100"
                            app:fontFamily="@font/montserrat"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/follower_percent"
                            android:textColor="@color/red_100"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                app:strokeWidth="1dp"
                android:id="@+id/sales_card"
                android:layout_marginTop="16dp"
                app:strokeColor="@color/basegray"
                app:cardElevation="4dp"
                android:layout_gravity="fill"
                android:layout_width="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_sales"
                        app:fontFamily="@font/montserrat"
                        android:fontFamily="@font/montserrat" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Headline5"
                            android:id="@+id/sales"
                            android:textColor="@color/dark_blue_100"
                            app:fontFamily="@font/montserrat"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:id="@+id/sales_button"
                            android:layout_gravity="end"
                            android:gravity="end"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:text="@string/details"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:id="@+id/upcoming_appointment_card"
                android:layout_columnSpan="1"
                app:strokeWidth="1dp"
                android:layout_marginTop="16dp"
                app:strokeColor="@color/basegray"
                app:cardElevation="4dp"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upcoming_appointments"
                        app:fontFamily="@font/montserrat"
                        android:fontFamily="@font/montserrat" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Headline5"
                            android:id="@+id/upcoming_appointments"
                            android:textColor="@color/dark_blue_100"
                            app:fontFamily="@font/montserrat"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:id="@+id/appointment_request_card"
                android:layout_columnSpan="1"
                app:strokeWidth="1dp"
                android:layout_marginTop="16dp"
                app:strokeColor="@color/basegray"
                app:cardElevation="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/appointment_request"
                        app:fontFamily="@font/montserrat"
                        android:fontFamily="@font/montserrat" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            style="@style/TextAppearance.MaterialComponents.Headline5"
                            android:textColor="@color/dark_blue_100"
                            android:id="@+id/appointment_request"
                            app:fontFamily="@font/montserrat"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>