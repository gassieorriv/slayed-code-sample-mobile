<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.LoginActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background"
        android:contentDescription="@string/login_background"
        android:layout_height="match_parent" />
        <RelativeLayout
        android:id="@+id/login_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_login_background">
            <TextView
                android:id="@+id/login_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/get_connected"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />
            <TextView
                android:id="@+id/login_subcontent"
                android:layout_below="@+id/login_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:text="@string/login_statement"
                android:layout_height="wrap_content" />
            <com.google.android.material.button.MaterialButton
               android:layout_width="match_parent"
               android:onClick="loginFacebook"
               android:layout_below="@id/login_subcontent"
               style='@style/joinFacebookButton'
               android:backgroundTint="@color/blue_100"
               android:background="@color/blue_100"
               android:id="@+id/facebook_login"
               android:layout_height="wrap_content" />
            <com.google.android.material.button.MaterialButton
               android:layout_width="match_parent"
               android:layout_below="@id/facebook_login"
               style='@style/joinGoogleButton'
               android:onClick="loginGoogle"
               app:background="@drawable/gradient_google_button"
               app:backgroundTint="@color/google_red_200"
                android:id="@+id/google_login"
               android:layout_height="wrap_content" />
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                android:layout_below="@+id/google_login"
                android:id="@+id/progress_bar"
                app:trackColor="@color/pink_100"
                app:indicatorColor="@color/blue_100"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:indeterminate="true" />
   </RelativeLayout>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>