            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                   android:layout_marginStart="16dp"
                    android:text="@string/friday"
